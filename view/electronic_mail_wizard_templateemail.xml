The COPYRIGHT file at the top level of this repository contains the full copyright notices and license terms. -->
<form col="4">
    <label name="from_"/>
    <field name="from_"/>
    <label name="sender"/>
    <field name="sender"/>
    <label name="to"/>
    <field name="to"/>
    <label name="cc"/>
    <field name="cc"/>
    <label name="bcc"/>
    <field name="bcc"/>
    <label name="use_tmpl_fields"/>
    <field name="use_tmpl_fields"/>
    <label name="subject"/>
    <field name="subject"/>
    <notebook>
        <page name="plain">
            <field name="plain" colspan="4" height="300"/>
        </page>
        <page name="html">
            <field name="html" colspan="4" height="300"/>
        </page>
        <page name="attachments">
            <label string="If the file is bigger than 25MB will not be attached."
                id="reset" yalign="0.0" xalign="0.0" xexpand="1"/>
            <field name="attachments" colspan="4"/>
        </page>
        <page name="origin_attachments">
            <field name="origin_attachments" colspan="4"/>
        </page>
    </notebook>
    <separator name="total" colspan="4"/>
    <field name="total" colspan="4"/>
    <newline/>
    <field name="template" invisible="1"/>
    <field name="message_id" invisible="1"/>
    <field name="in_reply_to" invisible="1"/>
</form>
